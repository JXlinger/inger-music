<view class="top_detail"><block wx:if="{{loading}}"><loading vue-id="1" bind:__l="__l"></loading></block><view class="top_info_pic"><image src="{{topDetail.topinfo.pic_v12}}" mode="widthFix"></image></view><view class="top_info_text"><text>{{topDetail.topinfo.ListName}}</text><text>{{topDetail.topinfo.ListName+" 第"+(topDetail.day_of_year==''?period:topDetail.day_of_year)+(topDetail.day_of_year==''?'周':'天')}}</text><text>{{"更新时间："+topDetail.update_time}}</text></view><view data-event-opts="{{[['tap',[['playFirst',['$0','$1','$2'],['firstUrl.songmid','firstUrl.songname','firstUrl.songid']]]]]}}" class="player_btn" bindtap="__e"><view class="arrow"></view></view><view class="top_list"><text>{{"排行榜  共"+topDetail.total_song_num+"首"}}</text><block wx:for="{{topDetail.songlist}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="list_item"><view data-event-opts="{{[['tap',[['toSongpage',['$0','$1','$2'],[[['topDetail.songlist','',index,'data.songmid']],[['topDetail.songlist','',index,'data.songname']],[['topDetail.songlist','',index,'data.songid']]]]]]]}}" bindtap="__e"><view class="songname"><text class="{{[index>2?'':'redname']}}">{{index+1}}</text><text>{{item.data.songname}}</text></view><view class="singername clearfix"><view></view><text>{{item.in_count}}</text><text><block wx:for="{{item.data.singer}}" wx:for-item="singer" wx:for-index="index" wx:key="index"><text>{{singer.name}}</text></block>{{(item.data.albumdesc==''?'':'·')+item.data.albumdesc+''}}</text></view></view></view></block></view><view class="toplist_info"><view>榜单简介</view><rich-text class="rich_info" nodes="{{topDetail.topinfo.info}}"></rich-text></view></view>